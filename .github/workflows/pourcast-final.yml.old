name: Run Bourbon Pourcast Search

on:
  workflow_dispatch:
  schedule:
    - cron: "0 14,22 * * *"  # 10AM and 6PM ET

jobs:
  run-search:
    runs-on: ubuntu-latest

    env:
      MAILGUN_API_KEY: ${{ secrets.MAILGUN_API_KEY }}
      MAILGUN_DOMAIN: ${{ secrets.MAILGUN_DOMAIN }}
      ALERT_EMAIL: ${{ secrets.ALERT_EMAIL }}

    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.10"

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Install wkhtmltopdf
        run: sudo apt-get install -y wkhtmltopdf

      - name: Run wakeabc_search.py
        run: python wakeabc_search.py

      - name: Send Mailgun Email
        run: python send_mailgun_email.py
